{
  "version": 2,
  "buildCommand": "npm run build && cp -r client/public/* dist/public/ 2>/dev/null || true",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
