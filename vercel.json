{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/video/(.*)",
      "destination": "/api/video-direct.js"
    },
    {
      "source": "/api/topics",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/topics/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
